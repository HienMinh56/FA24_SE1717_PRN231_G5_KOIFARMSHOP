<div class="row">
    <div class="col-md-10">
        <h3 class="display-8">Bank List</h3>
    </div>
    <div class="col-md-2 text-end">
        <button type="button" class="btn btn-primary" onclick="add();">
            Add
        </button>
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="card-header">
            <th class="card-title text-center">VoucherId</th>
            <th class="card-title text-center">VoucherCode</th>
            <th class="card-title text-center">DiscountAmount</th>
            <th class="card-title text-center">MinOrderAmount</th>
            <th class="card-title text-center">Status</th>              
        </tr>
    </thead>
    <tbody class="tblBanks">
        <!-- Rows will be populated here -->
    </tbody>
</table>

<div class="modal" id="bankModal" tabindex="-1" aria-labelledby="bankModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                    <div class="modal-header">
                        <h5 class="modal-title" id="bankModalLabel">Bank</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Add form fields here -->
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="voucherCode" class="form-label">Voucher Code</label>
                                <input type="text" class="form-control" id="voucherCode" required>
                            </div>
                            <div class="col-4">
                                <label for="discountAmount" class="form-label">Discount Amount</label>
                                <input type="number" class="form-control" id="discountAmount" required>
                            </div>
                            <div class="col-4">
                                <label for="minOrderAmount" class="form-label">Min Order Amount</label>
                                <input type="number" class="form-control" id="minOrderAmount" required>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-4">
                                <label for="voucherCode" class="form-label">ValidityStartDate</label>
                                <input type="text" class="form-control" id="voucherCode" required>
                            </div>
                            <div class="col-4">
                                <label for="discountAmount" class="form-label">ValidityEndDate</label>
                                <input type="number" class="form-control" id="discountAmount" required>
                            </div>
                            <div class="col-4">
                                <label for="minOrderAmount" class="form-label">Status</label>
                                <input type="number" class="form-control" id="minOrderAmount" required>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button id="btSave" type="button" class="btn btn-primary" onclick="saveData();">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
            }
        </div>
    </div>
</div>

@section scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                loadData();
            });

            function loadData() {
                alert("Loading data...");

                $.ajax({
                    url: 'https://localhost:7149/api/Vouchers',
                    type: "GET",
                    contentType: "application/json;charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        var vouchers = result.data;
                        var html = '';
                        $.each(vouchers, function (key, item) {
                            html += '<tr>';
                            html += '<td>' + item.voucherId + '</td>';
                            html += '<td>' + item.voucherCode + '</td>';
                            html += '<td>$' + item.discountAmount.toFixed(2) + '</td>';
                            html += '<td>$' + item.minOrderAmount.toFixed(2) + '</td>';
                            html += '<td>' + item.status + '</td>';
                            html += '</tr>'; // Closing tag for each row
                        });
                        $('.tblBanks').html(html);
                    },
                    error: function (xhr, error) {
                        alert("Error: " + xhr.statusText);
                    }
                });
            }

            function add() {
                $("#bankModalLabel").html("Add New");
                $('#bankModal').modal('show');
            }

            function saveData() {
                // Function to save data (to be implemented)
                // Here, you would collect data from the modal fields and send it to the server
                alert("Save functionality not implemented yet.");
                $('#bankModal').modal('hide'); // Close modal after save
            }
        </script>
}