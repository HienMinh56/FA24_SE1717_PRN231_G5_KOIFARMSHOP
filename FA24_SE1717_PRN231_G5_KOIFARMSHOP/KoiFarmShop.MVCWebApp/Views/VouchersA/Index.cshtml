<div class="modal" id="VoucherModal" tabindex="-1" aria-labelledby="VoucherModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            @using (Html.BeginForm(null, null, FormMethod.Post, new { name = "frm", id = "frm" }))
            {
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title" id="VoucherModalLabel">Voucher</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Add form fields here -->
                    <div class="row mb-3">
                        <div class="col-4">
                            <label for="voucherId" class="form-label">Voucher Id</label>
                            <input type="text" class="form-control" id="voucherId" required>
                        </div>
                        <div class="col-4">
                            <label for="note" class="form-label">Note</label>
                            <input type="text" class="form-control" id="note" required>
                        </div>
                    </div>
                    <div class="row mb-3">

                        <div class="col-4">
                            <label for="voucherCode" class="form-label">Voucher Code</label>
                            <input type="text" class="form-control" id="voucherCode" required>
                        </div>
                        <div class="col-4">
                            <label for="voucherName" class="form-label">Voucher Name</label>
                            <input type="text" class="form-control" id="voucherName" required>
                        </div>
                        <div class="col-4">
                            <label for="applyMethod" class="form-label">Apply Method</label>
                            <input type="number" class="form-control" id="applyMethod" required>
                        </div>
                        </div>
                    <div class="row mb-3">
                        <div class="col-4">
                            <label for="discountAmount" class="form-label">Discount Amount</label>
                            <input type="number" class="form-control" id="discountAmount" required>
                        </div>
                        <div class="col-4">
                            <label for="minOrderAmount" class="form-label">Min Order Amount</label>
                            <input type="number" class="form-control" id="minOrderAmount" required>
                        </div>

                        <div class="col-4">
                            <label for="quantity" class="form-label">Quantity</label>
                            <input type="number" class="form-control" id="quantity" required>
                        </div>
                    </div>
                
                    <div class="row mb-3">
                        <div class="col-4">
                            <label for="validityStartDate" class="form-label">Validity Start Date</label>
                            <input type="date" class="form-control" id="validityStartDate" required>
                        </div>
                        <div class="col-4">
                            <label for="validityEndDate" class="form-label">Validity End Date</label>
                            <input type="date" class="form-control" id="validityEndDate" required>
                        </div>
