@model KoiFarmShop.Data.Models.Consignment

@{
    ViewData["Title"] = "Details";
}

<h1>Consignment Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConsignmentId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConsignmentId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            <span>
                @if (Model.Type == 1)
                {
                    @:Care
                }
                else
                {
                    @:Sale
                }
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DealPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DealPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Method)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Method)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            <span>
                @if (Model.Status == 1)
                {
                    @:Pending
                }
                else @if (Model.Status == 2)
                {
                    @:Agreed
                }
                else @if (Model.Status == 3)
                {
                    @:In Store
                }
                else @if (Model.Status == 4)
                {
                    @:Sold
                }
                else @if (Model.Status == 5)
                {
                    @:Returned
                }
                else @if (Model.Status == 6)
                {
                    @:Canceled
                }
                else
                {
                    @:Unknown
                }
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ConsignmentDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ConsignmentDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModifiedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModifiedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Koi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Koi.KoiId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Payment)
        </dt>
        <dd class="col-sm-10">
            <span>
                @if (Model.PaymentId == null)
                {
                    @:N/A
                }
                else
                {
                    @Html.DisplayFor(model => model.PaymentId)
                }
            </span>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerContact)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TotalWeight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TotalWeight)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ConsignmentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
