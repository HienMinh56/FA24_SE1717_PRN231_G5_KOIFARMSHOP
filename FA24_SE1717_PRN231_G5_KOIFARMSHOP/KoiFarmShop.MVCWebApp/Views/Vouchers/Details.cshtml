@model KoiFarmShop.Data.Models.Voucher

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Voucher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoucherId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoucherCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VoucherName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VoucherName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplyMethod)
        </dt>
        <dd class="col-sm-10">
            @(Model.ApplyMethod == 1 ? "online" : Model.ApplyMethod == 0 ? "offline" : "both")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DiscountAmount)%
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MinOrderAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MinOrderAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @(Model.Status == 1 ? "Active" : "Inactive")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidityStartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidityStartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValidityEndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValidityEndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Note)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Note)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.VoucherId" class="btn btn-sm btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>
</div>
